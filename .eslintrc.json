{
  "root": true,
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": false,
            "allow": [],
            "depConstraints": [
              { "sourceTag": "scope:common", "onlyDependOnLibsWithTags": [] },
              { "sourceTag": "scope:server", "onlyDependOnLibsWithTags": ["scope:common"] },
              { "sourceTag": "scope:utils", "onlyDependOnLibsWithTags": ["scope:common"] },
              { "sourceTag": "scope:hooks", "onlyDependOnLibsWithTags": ["scope:common", "scope:utils"] },
              { "sourceTag": "scope:client", "onlyDependOnLibsWithTags": ["scope:client","scope:common", "scope:utils", "scope:hooks"] },
              { "sourceTag": "scope:component", "onlyDependOnLibsWithTags": ["scope:common", "scope:utils", "scope:hooks", "scope:client"] },
              { "sourceTag": "scope:root", "onlyDependOnLibsWithTags": ["scope:common", "scope:utils", "scope:hooks", "scope:client", "scope:component"] },
              { "sourceTag": "scope:app", "onlyDependOnLibsWithTags": ["scope:root", "scope:server"] }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {
        "@typescript-eslint/no-empty-interface": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
