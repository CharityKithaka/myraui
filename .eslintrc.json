{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "extends": ["plugin:@nx/react"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": false,
            "allow": [],
            "depConstraints": [
              { "sourceTag": "common", "onlyDependOnLibsWithTags": [] },
              { "sourceTag": "server", "onlyDependOnLibsWithTags": ["common"] },
              { "sourceTag": "utils", "onlyDependOnLibsWithTags": ["common"] },
              { "sourceTag": "hooks", "onlyDependOnLibsWithTags": ["common", "utils"] },
              { "sourceTag": "client", "onlyDependOnLibsWithTags": ["common", "utils", "hooks"] },
              { "sourceTag": "component", "onlyDependOnLibsWithTags": ["common", "utils", "hooks", "client"] },
              { "sourceTag": "client:root", "onlyDependOnLibsWithTags": ["common", "utils", "hooks", "client", "component"] },
              { "sourceTag": "app", "onlyDependOnLibsWithTags": ["client:root", "server"] }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {
        "@typescript-eslint/no-empty-interface": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
